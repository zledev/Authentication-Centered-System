generator client {
  provider     = "prisma-client"
  moduleFormat = "cjs"
  output       = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

model User {
  id         String      @id @default(cuid())
  email      String      @unique
  password   String
  role       Role        @default(USER)
  createdAt  DateTime    @default(now())
  userTokens UserToken[]
}

model UserToken {
  id           String   @id @default(cuid())
  userId       String
  email        String
  refreshToken String
  expiresAt    DateTime
  user         User     @relation(fields: [userId], references: [id])
}
